<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tech Blog</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="body">
  <div class="flex-column justify-space-around">
    <header class="flex-column justify-space-around p-5">
      <nav class="display-flex align-start nav-bar">
        <a href="/" class="no-button p-4">Home</a>
        <a href="/dashboard" class="no-button p-4">Dashboard</a>
        <!-- Conditionally render login link -->
        {{#if logged_in}}
          <button class="no-button p-4" id="logout" >Logout</button>
        {{else}}
          <a href="/login" class="no-button p-4">Login</a>
          <a href="/signup" class="no-button p-4">Signup</a>
        {{/if}}
        {{!-- <button class="no-button p-4" id="logout" >Logout</button> --}}
      </nav>
    </header>
    <main class="container">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>

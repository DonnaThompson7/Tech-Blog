<h1 class="page-title p-2">Your Dashboard</h1>

<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="col-md-12 mb-4 post">
  <div class="display-flex justify-space-between">
    <h2>
      <a href="/dashboard/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>{{format_date post.date_created}}</p>
  </div>
  <div >
  </div>
</div>
{{/each}}


<a href="/dashboard/addPost" class="p-4"><button class="add-post-button align-center "  >+ New Post</button></a>
